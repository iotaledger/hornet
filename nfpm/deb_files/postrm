#!/bin/sh

set -e

case "$1" in
remove)
    # Remove directories (database)
    rm -rf /var/lib/hornet-legacy/*/
    ;;
purge)
    # Remove config files
    rm -rf /var/lib/hornet-legacy
    if id hornet-legacy >/dev/null 2>&1; then
        deluser hornet-legacy >/dev/null
    fi
    ;;
upgrade | failed-upgrade | abort-install | abort-upgrade | disappear) ;;

*)
    echo "postrm called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac
